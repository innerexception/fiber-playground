{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "target": "es6",
        "lib": [
            "dom",
            "es7"
        ]
    },
    "include": [
        "./**/*",
        "../data/*",
    ],
    "exclude": [
        "node_modules",
        "./public",
        "./assets"
    ]
}
